{
  "name": "com.domain.app.demov2",
  "description": "demo-v2",
  "scripts": {
    "prepare": "husky install",
    "start": "lng dev",
    "build": "lng build",
    "build:web": "lng build",
    "cap:copy": "npx cap copy android",
    "android:debug": "cd android && ./gradlew assembleDebug",
    "android:release:apk": "cd android && ./gradlew assembleRelease",
    "android:release:aab": "cd android && ./gradlew bundleRelease",
    "build:apk": "npm run build:web && npm run cap:copy && npm run android:debug",
    "build:aab": "npm run build:web && npm run cap:copy && npm run android:release:aab",
    "android:connect": "adb connect 192.168.1.39:5555",
    "android:install": "adb install -r android/app/build/outputs/apk/debug/app-debug.apk"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.4",
    "@capacitor/app": "^7.1.0",
    "@capacitor/core": "^7.4.4",
    "@lightningjs/core": "2.15.0",
    "@lightningjs/sdk": "5.5.5",
    "@lightningjs/ui": "1.3.19"
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@capacitor/assets": "^3.0.5",
    "@capacitor/cli": "^7.4.4",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "babel-eslint": "^10.0.3",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  }
}
